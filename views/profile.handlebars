<div class="profile">
  <div class="user-info">
    <h2>User info</h2>
    <p>Name</p>
    <p>Phone</p>
  </div>

  <div class="orders">
    <h2>Orders</h2>
    <table>
      <thead>
        <tr>
          <th>Item</th>
          <th>Qty</th>
          <th>Price</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        {{#each corders}}
        <tr>
          <td> <a href="/products/{{p_id}}">{{name}}</a> </td>
          <td>{{quantity}}</td>
          <td>{{price}}</td>
          <td></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <div class="cart">
    <h2>Items on Shopping Cart</h2>
    <table>
      <thead>
        <tr>
          <th>Item</th>
          <th>Qty</th>
          <th>Price</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each orders}}
        <tr>
          <td>{{name}}</td>
          <td>{{quantity}}</td>
          <td>{{price}}</td>
          <td><span title="remove" class="close"><a href="/orders/{{_id}}">&#10008;</a></span></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
